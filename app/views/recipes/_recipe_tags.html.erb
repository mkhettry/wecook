<div class="tag-section">
<span id = "tags">
<% user_recipe.tag_list.each do |tag| %>
    <span class="tag label label-info">
      <span><%= tag.to_s %></span>
      <span class="tag_x" user_recipe_id="<%=user_recipe.id%>">x</span>
    </span>
<% end %>

  <span class="tag label label-info" style="display:none;">
    <span>""</span>
     <span class="tag_x" user_recipe_id="<%=user_recipe.id%>">x</span>
  </span>
</span>

  <%= text_field_tag :add_tag, "", :class=>"input-small tag-text-box", :user_recipe_id=>user_recipe.id, :placeholder => "tag name"%>
  <span class="tag_plus">+</span>

</div>

