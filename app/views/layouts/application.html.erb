<!DOCTYPE html>
<html>
<head>
  <title>Cooks</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>

<div id="user_nav">
  <% if current_user %>
      Welcome <%= current_user.name %>
      <%= link_to "Sign Out", signout_path %>
  <% else %>
      <%= link_to "Sign in with facebook", "/auth/facebook" %>
  <% end %>
</div>

<%= yield %>

</body>
</html>
